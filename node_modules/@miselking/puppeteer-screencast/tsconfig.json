{
    "compilerOptions": {
        "incremental": true,
        "target": "es2017",
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "src",
        "moduleResolution": "node",
        "allowJs": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "inlineSourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}